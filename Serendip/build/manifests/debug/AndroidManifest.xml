<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.thirtysix.serendip">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <supports-screens android:largeScreens="true" android:normalScreens="true" android:smallScreens="true" android:xlargeScreens="true"/>


    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name="com.thirtysix.serendip.Mesiji" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.thirtysix.serendip.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_home" android:name="com.thirtysix.serendip.activity.LocationActivity" android:parentActivityName="com.thirtysix.serendip.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.thirtysix.serendip.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_home" android:name="com.thirtysix.serendip.activity.ConversationActivity" android:parentActivityName="com.thirtysix.serendip.LocationActivity">
        </activity>
        <activity android:label="@string/title_activity_home" android:name="com.thirtysix.serendip.activity.OpenConversationActivity" android:parentActivityName="com.thirtysix.serendip.ConversationActivity">
        </activity>
        <activity android:label="@string/title_activity_register" android:name="com.thirtysix.serendip.Register">
        </activity>
    </application>

</manifest>
