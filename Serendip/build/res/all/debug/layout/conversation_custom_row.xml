<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:padding="5dip">

    <LinearLayout
            android:id="@+id/con_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip">


        <ImageView
                android:id="@+id/loc_image"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/megaphone_icon"/>

    </LinearLayout>

    <TextView
            android:id="@+id/cTitle"
            android:layout_toRightOf="@+id/con_thumbnail"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_heading"
            android:typeface="sans"
            android:textSize="17dip"
            android:ellipsize="end"
            android:textStyle="bold"/>

    <ImageView
            android:id="@+id/starconvo"
            android:src="@drawable/star"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@+id/cTitle"
            android:layout_alignTop="@+id/con_thumbnail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

</RelativeLayout><!-- From: /Users/jmadan/development/SerendipProject/Serendip/src/main/res/layout/conversation_custom_row.xml -->